<div class="my-4">
    {{form_start(formSearch)}}
        <div class="d-flex align-items-center searchContainer">
            {% if pagination.search == "" %}
                {{form_row(formSearch.search)}}
            {% else %}
                {{form_row(formSearch.search,{ 'attr': {'placeholder': pagination.search} })}}
            {% endif %}
            <button type="submit" class="boutonSubmit">Rechercher</button>
        </div>
    {{form_end(formSearch)}}
</div>