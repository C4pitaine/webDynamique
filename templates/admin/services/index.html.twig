{% extends 'admin/base.html.twig' %}

{% block title %}Services{% endblock %}


{% block body %}
    <div class="container-fluid full slideAdmin">
        <div class="wrapper">
            <h1 class="my-5">Gestion des services</h1>
            <a href="{{path('admin_services_new')}}" class="btn btn-success mb-5">Ajout d'un service</a>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Logo</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for service in pagination.data %}
                        <tr>
                            <td>{{service.id}}</td>
                            <td>{{service.title}}</td>
                            <td>{{service.description}}</td>
                            <td>{{service.logo}}</td>
                            <td class="text-center"> 
                                <a href="{{path('admin_services_update',{'id':service.id})}}" class="btn btn-warning mb-2"><i class="fas fa-edit"></i></a>
                                <div class="btn btn-danger deleteButton"><i class="fas fa-trash"></i></div>
                            </td>
                        </tr>
                        <div class="alertDelete">
                            <div class="containerDelete">
                                <h4>Êtes vous sûr de vouloir supprimer le service : {{service.title}}</h4>
                                <div class="deleteChoice">
                                    <a href="{{path('admin_services_delete',{'id':service.id})}}" class="btn btn-danger me-2">Supprimer</a>
                                    <div class="btn btn-primary annulerDelete ms-2">Annuler</div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </tbody>
            </table>
            {{pagination.display}}
        </div>
    </div>
{% endblock %}
