{% extends "admin/base.html.twig" %}

{% block title %}Modification d'un entrainement{% endblock %}

{% block body %}
    <div class="slideAdmin">
        <div class="wrapper">
            <div class="form">
                <div class="titleBack">
                    <h2>Modifier un entrainement</h2>
                    <a href="{{path('admin_entrainement_index')}}" class="btn btn-secondary">Retour</a>
                </div>
                <div class="d-flex justify-content-center w-100">
                    <img src="/uploads/entrainements/{{entrainementImage}}" alt="Image de {{entrainement.title}}" class="w-50 my-3">
                </div>
                {{form_start(formEntrainement)}}
                    {{form_widget(formEntrainement)}}
                    <button type="submit" class="btn btn-warning my-3">Modifier</button>
                {{form_end(formEntrainement)}}
            </div>
        </div>
    </div>
{% endblock %}