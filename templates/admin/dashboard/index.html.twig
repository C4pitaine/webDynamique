        <div class="wrapper">
            <h1 class="mt-5 mb-5">Dashboard</h1>
            <div class="d-flex justify-content-between w-50 alert alert-danger">
                <h4>Vous avez {{messageNotSeen}} messages non vus</h2>
                <div>
                    <a href="{{path('admin_contact_index')}}" class="btn btn-info block">Voir les messages</a>
                </div>
            </div>
            <div class="d-flex justify-content-between w-50 alert alert-success">
                <h4>Vous avez {{usersNumber}} utilisateurs inscrits</h2>
            </div>
        </div>
    </div>
{% endblock %}