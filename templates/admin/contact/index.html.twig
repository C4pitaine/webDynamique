{% extends 'admin/base.html.twig' %}

{% block title %}Contact{% endblock %}


{% block body %}
    <div class="container-fluid full slideAdmin">
        <div class="wrapper">
            <h1 class="my-5">Gestion des contact</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Pr√©nom</th>
                        <th>Email</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contact in pagination.data %}
                        <tr>
                            <td>{{contact.id}}</td>
                            <td>{{contact.lastName}}</td>
                            <td>{{contact.firstName}}</td>
                            <td>{{contact.email}}</td>
                            <td class="text-center"> 
                                <a href="" class="btn btn-warning"><i class="fas fa-eye"></i></a>
                                <div class="btn btn-danger deleteButton"><i class="fas fa-trash"></i></div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {{pagination.display}}
        </div>
    </div>
{% endblock %}
