{% extends "admin/base.html.twig" %}

{% block title %}Modification d'un Article{% endblock %}

{% block body %}
    <div class="slideAdmin">
        <div class="wrapper">
            <div class="form">
                <div class="titleBack">
                    <h2>Modifier un article</h2>
                    <a href="{{path('admin_article_index')}}" class="btn btn-secondary">Retour</a>
                </div>
                <div class="d-flex justify-content-center w-100">
                    <img src="/uploads/articles/{{articleImage}}" alt="Image de {{article.title}}" class="w-50 my-3">
                </div>
                {{form_start(formArticle)}}
                    {{form_widget(formArticle)}}
                    <button type="submit" class="btn btn-warning my-3">Modifier</button>
                {{form_end(formArticle)}}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        tinymce.init({
            selector: 'textarea',
            license_key: 'gpl',
            invalid_elements: 'br'
        });
    </script>
{% endblock %}